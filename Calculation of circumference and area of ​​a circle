#include <stdio.h>
#include <stdlib.h>

int main()
{
   int a,r,alan,cevre;
   printf("enter half cap:");
   scanf("%d",&r);

   printf("press 1 for domain account, press 2 to calculate perimeter");
   scanf("%d",&a);
   if(a==1){
    alan=3*r*2;
    printf("Alan=%d",alan);
   }
   else if(a==2)
   {

    cevre=3*r;
    printf("Cevre=%d",cevre);
   }
   else{
    printf("incorrect entry!");
   }


    return 0;
}
